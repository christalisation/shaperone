{
  "name": "@hydrofoil/shaperone",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore --ignore-path .eslintignore",
    "build": "wsrun -m build",
    "test": "run-p test:*",
    "test:core": "c8 --all -o coverage/core --reporter=lcov mocha --recursive 'packages/core-tests/**/*.test.ts'",
    "test:web": "web-test-runner",
    "build:js": "wsrun -m babel",
    "build:dts": "tsc --declaration --emitDeclarationOnly",
    "prerelease": "run-s build:*",
    "release": "changeset publish",
    "docs": "docsify serve ./dist",
    "typedoc": "typedoc --watch"
  },
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.18.13",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@changesets/cli": "^2.22.0",
    "@open-wc/building-webpack": "^2.13.46",
    "@open-wc/eslint-config": "^12.0.3",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@tpluscode/eslint-config": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@web/dev-server-esbuild": "^0.3.2",
    "@web/dev-server-rollup": "^0.3.19",
    "@web/test-runner": "^0.13.15",
    "c8": "^7.1.2",
    "chai-snapshot-matcher": "^1.0.6",
    "docsify-cli": "^4.4.1",
    "es-dev-commonjs-transformer": "^0.2.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lit-analyzer": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rdfjs-eds-plugin": "*",
    "readable-stream": "^4.5.2",
    "resolve-typescript-plugin": "^2.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "standard": "^17.0.0",
    "ts-lit-plugin": "^1.2.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.9",
    "typescript": "^5.3.3",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.3",
    "webpack-merge": "^5.2.0",
    "wsrun": "^5.2.4"
  },
  "resolutions": {
    "@polymer/polymer": "3.4.1"
  },
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "test-setup.js"
    ],
    "loader": "ts-node/esm/transpile-only"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
